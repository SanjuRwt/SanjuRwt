<body>
    <script>
        var i,j;
        for(i=1;i<=5;i++)
        {
            for(j=1;j<=5-i;j++)
            {
                document.write("_");
                
            }
            for(j=1;j<=i;j++)
            {
                document.write("_*");
            }
            document.write("<br>")
        }
    </script>
</body>
